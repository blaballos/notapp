---
import Layout from "../layouts/Layout.astro"

import GoogleIcon from "../components/icons/GoogleIcon.astro"
import GitHubIcon from "../components/icons/GitHubIcon.astro"
---

<Layout title="Registrarse"
description="Registrate en Notapp y comienza a organizar tus proyectos">
    <main class="py-20">
        <div class="flex min-h-full flex-col justify-center px-6 lg:px-8">
            <div class="flex flex-col items-center justify-center">
                <a href="/">
                    <span class="text-4xl font-extrabold text-gray-950">Notapp</span>
                </a>
                <span class="text-lg font-semibold text-gray-700">Regístrate para continuar</span>
            </div>
          
            <div class="mt-4 sm:mx-auto sm:w-full sm:max-w-sm">
              <form>
                <input id="email-register" type="email" name="email" placeholder="Introcude tu correo electrónico" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-gray-400 sm:text-sm/6 mb-2">
                <input id="password-register" type="password" name="password" placeholder="Introcude tu contraseña" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-gray-400 sm:text-sm/6 mb-2">
                <p class="text-sm mb-2">Al registrarme, acepto los <a href="/404" class="text-blue-500 hover:underline underline-offset-2">Términos y condiciones</a>.</p>
                </form>
                <button id="register" type="submit" class="flex w-full justify-center rounded-md bg-blue-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Registrarse</button>
                <hr class="my-8 w-full border-gray-700">
                <div class="flex flex-col gap-y-4 mb-6">
                        <button class="w-full inline-flex items-center justify-center gap-x-2 border-none bg-gray-100 text-sm font-medium text-black/80 px-4 py-3 rounded-lg hover:bg-gray-200 transition duration-300">
                            <GoogleIcon class="size-5"/>
                            Continuar con Google
                        </button>
                        <button class="w-full inline-flex items-center justify-center gap-x-2 border-none bg-black text-sm font-medium text-white px-4 py-3 rounded-lg">
                            <GitHubIcon class="size-6"/>
                            Continuar con GitHub
                        </button>
                </div>
            </div>
                <p class="text-sm">¿Ya tienes cuenta? <a href="/login" class="text-blue-500 hover:underline underline-offset-2">Iniciar sesión</a></p>
        </div>
    </main>
    <script type="module" src="/src/scripts/register.js" defer></script>
</Layout>